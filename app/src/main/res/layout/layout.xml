<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change picture"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            android:id="@+id/goToRecord"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lunch other app"
            android:id="@+id/launchOtherApps"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speak"
            android:id="@+id/speak"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slide"
            android:id="@+id/slide"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="db"
            android:id="@+id/db"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deviceInfo"
            android:onClick="getToInfoActivity"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="youtube video"
            android:id="@+id/youtubeVideo"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simple_blockChain"
            android:id="@+id/simpleBlockChain"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:id="@+id/download"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Doze Mode"
            android:onClick="testDozeMode"/>

        <Button
            android:id="@+id/blink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blink"/>
    </LinearLayout>

</LinearLayout>
