<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syoui.imagetab.foundation.camera.camera_preview">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SurfaceView
                android:id="@+id/preview_id"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="210px"
                android:adjustViewBounds="true"
                android:src="@drawable/rufi"
                android:layout_marginBottom="30px"
                android:layout_alignBottom="@+id/preview_id"
                android:layout_alignParentLeft="true"
                android:onClick="takePictureOnClick"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="写真を取る"
            android:id="@+id/takePic"
            android:onClick="takePictureOnClick"
            android:background="@drawable/button_state"/>
            -->

        <ImageView
            android:id="@+id/afterShow"
            android:layout_width="600px"
            android:layout_height="800px"
            android:src="@drawable/giant"
            android:layout_gravity="center"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
