<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.syoui.imagetab.TutorialActivity"
    tools:showIn="@layout/activity_detail"
      android:layout_gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#01A2FF"
        android:id="@+id/return_button">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Components"
            android:textSize="36dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:id="@+id/goto_listView_button">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Storage"
            android:textAlignment="center"
            android:textSize="36dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#01A2FF"
        android:id="@+id/goto_videoView_button">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Layout"
                android:textAlignment="center"
                android:textSize="36dp"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:id="@+id/goto_content_button">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="HardWare"
            android:textAlignment="center"
            android:textSize="36dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#01A2FF"
        android:id="@+id/goto_knowledge_button">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Experience"
            android:textAlignment="center"
            android:textSize="36dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>




</LinearLayout>