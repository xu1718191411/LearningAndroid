<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.syoui.imagetab.TutorialActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/return_button"
            android:text="逆引き(基礎編)"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/goto_listView_button"
            android:text="逆引き(応用編)"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/goto_videoView_button"
            android:text="JAVAの知識"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/goto_content_button"
            android:text="詳細ページ"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/goto_knowledge_button"
            android:text="経験座談会"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_gravity="center_horizontal"
            />



    </LinearLayout>


</android.support.constraint.ConstraintLayout>